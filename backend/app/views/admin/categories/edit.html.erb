<h1><%= @category.new_record? ? "Nueva Categoría" : "Editar Categoría" %></h1>

<%= render 'shared/form_errors', object: @category %>

<%= form_with model: [:admin, @category], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, "Imagen", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>

    <% if @category.image.attached? %>
      <div class="mt-2">
        <%= image_tag @category.image, class: "img-fluid", style: "max-width: 200px;" %>
      </div>
    <% end %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Cancelar", admin_categories_path(@user), class: "btn btn-secondary ms-2" %>
<% end %>

<h1>Detalles del Usuario</h1>

<div class="card mb-4">
  <div class="card-body">
    <p><strong>ID:</strong> <%= @user.id %></p>
    <p><strong>Nombre:</strong> <%= @user.name %></p>
    <p><strong>Apellido:</strong> <%= @user.last_name %></p>
    <p><strong>Ciudad:</strong> <%= @user.city %></p>
    <p><strong>Dirección:</strong> <%= @user.address %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Rol:</strong> <%= @user.admin? ? "Admin" : "User" %></p>
    <p><strong>Creado el:</strong> <%= @user.created_at.strftime("%Y-%m-%d") %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to 'Editar', edit_admin_user_path(@user), class: 'btn btn-primary' %>
  <%= link_to 'Eliminar', admin_user_path(@user), method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este usuario?' }, class: 'btn btn-danger' %>
</div>
